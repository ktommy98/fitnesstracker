@page "/"

<PageTitle>Profile</PageTitle>

<link rel="stylesheet" href="css/Home.razor.css" />

<div class="profile-container">
    <div class="sidebar">
        <img src="images/profile.png" alt="Profile Logo" class="profile-logo" />
        <h2>Me</h2>
    </div>
    <div class="profile-content">
        <div class="tabs">
            <button class="tab @(activeTab == "General" ? "active" : "")" @onclick='() => SetActiveTab("General")'>General</button>
            <button class="tab @(activeTab == "Personal" ? "active" : "")" @onclick='() => SetActiveTab("Personal")'>Personal</button>
            <button class="tab @(activeTab == "Address" ? "active" : "")" @onclick='() => SetActiveTab("Address")'>Address</button>
            <button class="tab @(activeTab == "Social" ? "active" : "")" @onclick='() => SetActiveTab("Social")'>Social</button>
        </div>

        <div class="profile-info">
            @if (activeTab == "General")
            {
                <h3>General Information</h3>
                <div class="info-box">
                    <label>Username</label>
                    <input type="text" value="@Username" readonly />
                </div>
                <div class="info-box">
                    <label>Email</label>
                    <input type="text" value="@Email" readonly />
                </div>
                <div class="info-box">
                    <label>Age</label>
                    <input type="text" value="@Age" readonly />
                </div>
                <div class="info-box">
                    <label>Height (cm)</label>
                    <input type="text" value="@Height" readonly />
                </div>
                <div class="info-box">
                    <label>Weight (kg)</label>
                    <input type="text" value="@Weight" readonly />
                </div>
                <div class="info-box">
                    <label>Goal Weight (kg)</label>
                    <input type="text" value="@GoalWeight" readonly />
                </div>
            }

            <button class="edit-btn">EDIT</button>
        </div>
    </div>
</div>

@code {
    private string activeTab = "General";

    // Példa adatok, amelyeket a felhasználó adott meg
    private string Username = "ktommy";
    private string Email = "kthomasfmm@gmail.com";
    private int Age = 25; // Ezt az értéket bejelentkezés után kell beállítani
    private int Height = 176; // Ezt az értéket bejelentkezés után kell beállítani
    private int Weight = 89; // Ezt az értéket bejelentkezés után kell beállítani
    private int GoalWeight = 79; // Ezt az értéket bejelentkezés után kell beállítani

    private void SetActiveTab(string tab)
    {
        activeTab = tab;
    }
}
